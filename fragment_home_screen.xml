<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sid.minim.Home_screen">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/uni"
        android:layout_marginBottom="25dp" />
    - <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="5dp"
    android:layout_weight="4"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">
    - <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:id="@+id/phd"
        android:background="@drawable/pp"
        android:text="Add Ph.D\n student"
        android:layout_weight="0.4" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.05" />
    <Button
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:text="Add Mphil\n student"
        android:background="@drawable/pp"
        android:id="@+id/mphil"
        android:layout_weight="0.4" />
</LinearLayout>
    - <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:id="@+id/mtech"
        android:background="@drawable/pp"
        android:text="Add M.Tech\n student"
        android:layout_weight="0.4" />
    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.05" />
    <Button
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:text="Add B.Tech\n student"
        android:background="@drawable/pp"
        android:id="@+id/btech"
        android:layout_weight="0.4" />
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFF"
        android:text="Sync with Google Server" />
</LinearLayout>
    - <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/colorPrimary">
    <View
        android:layout_width="18dp"
        android:layout_height="1dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="View" android:id="@+id/v"
        android:textColor="#FFF"
        android:background="@color/colorPrimary" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Search" android:id="@+id/s"
        android:textColor="#FFF"
        android:background="@color/colorPrimary" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:id="@+id/sm"
        android:textColor="#FFF"
        android:background="@color/colorPrimary" />
</android.support.v7.widget.Toolbar>


</LinearLayout>
